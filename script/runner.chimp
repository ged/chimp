#!/usr/local/bin/chimp

use io;
use os;
use compiler;

main argv {
  var testdir = argv[1];
  if testdir== nil {
    testdir = os.dirname(__file__) + "/../test";
  }

  io.print("Starting Chimp Runner for " + testdir);
  os.glob(testdir + "/*.chimp").each(fn { |f|
    var mod = compiler.compile(f);
    mod.main([]);
  });
}
